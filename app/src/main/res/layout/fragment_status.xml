<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragments.StatusFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/primary"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/userStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Loading status..."/>

    <EditText
        android:id="@+id/statusInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userStatus"
        android:layout_marginTop="16dp"
        android:hint="Enter new status"
        android:padding="12dp"
        android:background="@drawable/message_box_background"/>

    <Button
        android:id="@+id/updateStatusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Update Status"
        android:backgroundTint="@color/primary"/>

</RelativeLayout>